---
import { Image } from 'astro:assets';
import Socials from './Socials.astro';
import img from '/src/assets/bojan.jpg';
---

<div
  class="bg-dark-100 w-full lg:w-2/6 xl:w-2/8 p-4 flex flex-row lg:flex-col items-center gap-4"
>
  <Image
    src={img}
    alt="Bojan Blazhevski"
    class="w-24 h-24 lg:w-full lg:h-1/4 rounded-md object-cover"
  />
  <div class="flex flex-col gap-2 lg:items-center">
    <h2 class="text-xl lg:text-3xl font-bold">Bojan Blazhevski</h2>
    <p class="text-lg lg:text-xl text-gray-400">
      Full-Stack & Mobile App Developer
    </p>
    <div class="flex flex-row gap-4">
      <Socials
        social="linkedin"
        link="https://www.linkedin.com/in/bojanblazevski/"
      />
      <Socials social="github" link="https://github.com/Bojan227" />
    </div>
  </div>
</div>
