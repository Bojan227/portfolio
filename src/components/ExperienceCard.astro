---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  company: string;
  startDate: string;
  endDate?: string;
  description: string;
  companyImage: ImageMetadata;
}

const { title, company, startDate, endDate, description, companyImage } =
  Astro.props;
---

<div
  class="flex flex-col space-y-2 border-2 rounded-lg p-2 bg-dark-100 border-dark-100"
>
  <h3 class="text-lg">{startDate} - {endDate ?? 'Present'}</h3>

  <div class="flex flex-row gap-2 items-center">
    <Image
      src={companyImage}
      alt={company}
      class="object-cover rounded-md w-5 h-5"
    />
    <div>
      <h3 class="text-lg">{company}</h3>
      <h2>{title}</h2>
    </div>
  </div>
  <p class="text-gray-300 text-base w-full xl:w-2/3">{description}</p>
</div>
