---
import type { Store } from './Projects.astro';

interface Props {
  name: string;
  technologies: string[];
  stores?: Store[];
  description: string;
}

const { name, technologies, stores, description } = Astro.props;
---

<div
  class="flex flex-col space-y-2 border-2 rounded-lg p-2 bg-dark-100 border-dark-100 w-full"
>
  <h2 class="text-2xl">{name}</h2>
  <p class="text-gray-300 text-base flex-1">{description}</p>
  <div>
    {
      stores?.map((store) => (
        <a href={store.url} target="_blank">
          <Fragment set:html={store.icon} />
        </a>
      ))
    }
  </div>
  <ul class="flex flex-row gap-2">
    {
      technologies.map((tech) => (
        <li class="bg-dark-200 px-4 py rounded-lg">{tech}</li>
      ))
    }
  </ul>
</div>
